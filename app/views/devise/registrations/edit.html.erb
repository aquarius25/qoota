<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true, placeholder: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "pass" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "pass again" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "current_pass" %>
  </div>


    <div class="field">
    <%= f.label :Last_Name %></br>
    <%= f.text_field :family_name, placeholder: "名字" %></dr>
  </div>

  <div class="field">
    <%= f.label :First_Name %></br>
    <%= f.text_field :real_name, placeholder: "本名" %></dr>
  </div>

  <div class="field">
    <%= f.label :Your_Icon %></br>
    <%= f.file_field :image %></br>
  </div>

  <div class="field">
    <%= f.label :FaceBook %></br>
    <%= f.text_field :url_fb, placeholder: "FaceBook_Link" %></dr>
  </div>

  <div class="field">
    <%= f.label :Twitter %></br>
    <%= f.text_field :url_twitter, placeholder: "Twitter_Link" %></dr>
  </div>

  <div class="field">
    <%= f.label :GitHub %></br>
    <%= f.text_field :url_github, placeholder: "GitHub_Link" %></dr>
  </div>



  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
