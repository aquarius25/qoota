<div class="d-flex flex-md-column">
  <%= form_for @article do |f| %>
    <div class="form-group">
      <%= f.label :title %><br />
      <%= f.text_field :title, autofocus: true, class:"form-control", id:"formGroupExampleInput", placeholder:"Article Title", style:"width: 300px; margin: 20px 0 0 20px;" %>
    </div>
    <div class="form-group">
      <%= f.label :explain %><br />
      <%= f.text_field :explain, class:"form-control", id:"formGroupExampleInput2", placeholder:"a few article explain", style:"width: 300px; margin: 20px 0 0 20px;" %>
    </div>
    <div class="form-group">
      <%= f.label :text %><br />
      <%= f.text_area :text, class:"form-control", id:"formGroupExampleInput2", placeholder:"Article main content", style:"margin: 20px;", size:"1x100" %>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit "Submit", class:"btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
